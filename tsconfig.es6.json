{
  "copyright": "Copyright 2018 Ayogo Health Inc.",
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["es6", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noLib": false,
    "outDir": "dist-es6",
    "pretty": true,
    "removeComments": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "sourceMap": true,
    "target": "es6"
  },

  "include": [
    "./src/**/*.ts"
    ]
}
